{
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js"
        ]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "import/no-unresolved": "error",
    "import/prefer-default-export": "off",
    "import/no-default-export": "error",
    "global-require": "off",
    "lines-between-class-members": "off",
    "no-use-before-define": "off",
    "func-names": "off",
    "import/extensions": [
      "error",
      "always",
      {
        "js": "ignorePackages"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.test.js","*.spec.js"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ],
  "globals": {
    "angular": "readonly",
    "describe": "readonly",
    "expect": "readonly",
    "it": "readonly"
  }
}